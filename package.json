{
    "name": "apollosystems",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "serve": "php artisan serve --host=0.0.0.0",
        "dev": "nuxi dev",
        "analyze": "ANALYZE=true nuxi build",
        "dev:docs": "concurrently \"vue-docgen --watch\" \"nuxi dev\"",
        "git:clean": "git checkout develop && git branch -vv | grep ': gone]'|  egrep -v '(^\\*|master|main|develop)' | awk '{ print $1; }' | xargs -r git branch -D",
        "build": "NODE_ENV=production nuxi build",
        "start": "nuxt start",
        "generate": "node --max-old-space-size=4096 node_modules/nuxt/bin/nuxt.js generate",
        "lint:js": "eslint --ext .ts,.js,.vue --ignore-path .gitignore .",
        "lint:style": "stylelint **/*.{vue,css} --ignore-path .gitignore",
        "lint": "npm run lint:js && npm run lint:style",
        "lintfix": "eslint --fix --ext .js,.jsx,.ts,.tsx,.vue --ignore-path .gitignore . && stylelint --fix **/*.{vue,css} --ignore-path .gitignore",
        "prepare": "husky install"
    },
    "dependencies": {
        "@nuxt/bridge": "npm:@nuxt/bridge-edge@3.0.0-27740081.058a6c1",
        "@nuxt/content": "^1.15.1",
        "@nuxtjs/vuetify": "^1.12.3",
        "nuxt-edge": "2.16.0-27720022.54e852f",
        "remark-plugin-vue-live": "^1.0.5",
        "vue-live": "^2.1.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.1.2",
        "@commitlint/config-conventional": "^17.1.0",
        "@nuxt/types": "^2.15.8",
        "@nuxtjs/eslint-config-typescript": "^10.0.0",
        "@types/node": "^18.7.23",
        "concurrently": "^7.4.0",
        "cross-env": "^7.0.3",
        "encoding": "^0.1.13",
        "eslint": "~8.22.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-loader": "^4.0.2",
        "eslint-plugin-nuxt": "^3.2.0",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "^8.0.1",
        "lint-staged": "^13.0.3",
        "nuxt-compress": "^5.0.0",
        "postcss": "^8.4.17",
        "postcss-html": "^1.5.0",
        "prettier": "^2.7.1",
        "stylelint": "^14.13.0",
        "stylelint-config-prettier": "^9.0.3",
        "stylelint-config-recommended-vue": "^1.4.0",
        "stylelint-config-standard": "^28.0.0",
        "stylelint-config-standard-scss": "^5.0.0",
        "ts-loader": "^8.4.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.4",
        "vue-docgen-cli": "^4.51.0",
        "vuetify": "*",
        "vuetify-loader": "^1.9.2"
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown",
        "*.{js,jsx,ts,tsx,vue}": "eslint --fix --ignore-path .gitignore",
        "*.{css,scss,vue}": "stylelint --fix --ignore-path .gitignore",
        "**/*.php": "composer lintfix"
    },
    "packageManager": "yarn@3.2.3"
}
